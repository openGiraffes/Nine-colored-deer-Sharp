                                    PreviewMouseLeftButtonDown="Button_MouseLeftButtonDown" 
                                    PreviewMouseLeftButtonUp="Button_MouseLeftButtonUp"></Button>
                            <Button Focusable="False" Tag="softright" Content="右软键" Grid.Row="0" 
                                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                                    Padding="0" Margin="4,3" Grid.Column="2" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    PreviewMouseLeftButtonDown="Button_MouseLeftButtonDown" 
                                    PreviewMouseLeftButtonUp="Button_MouseLeftButtonUp"></Button>

                            <Button Focusable="False" Tag="menu" Content="菜单键" Grid.Row="1" 
                                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                                    Padding="0" Margin="4,3" Grid.Column="0" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    PreviewMouseLeftButtonDown="Button_MouseLeftButtonDown" 
                                    PreviewMouseLeftButtonUp="Button_MouseLeftButtonUp"></Button>
                            <Button Focusable="False" Tag="back" Content="返回键" Grid.Row="1" 
                                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                                    Padding="0" Margin="4,3" Grid.Column="2" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    PreviewMouseLeftButtonDown="Button_MouseLeftButtonDown" 
                                    PreviewMouseLeftButtonUp="Button_MouseLeftButtonUp"></Button>

                            <Button Focusable="False" Tag="call" Content="拨号键" Grid.Row="2" 
                                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                                    Padding="0" Margin="4,3" Grid.Column="0" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    PreviewMouseLeftButtonDown="Button_MouseLeftButtonDown" 
                                    PreviewMouseLeftButtonUp="Button_MouseLeftButtonUp"></Button>
                            <Button Focusable="False" Tag="power" Content="挂机键" Grid.Row="2" 
                                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                                    Padding="0" Margin="4,3" Grid.Column="2" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    PreviewMouseLeftButtonDown="Button_MouseLeftButtonDown" 
                                    PreviewMouseLeftButtonUp="Button_MouseLeftButtonUp"></Button>

                            <Grid Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="1" Grid.RowSpan="3">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <Button Focusable="False" Tag="ok" Content="OK" Grid.Row="1" Margin="2" Padding="0" 
                                        VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Column="1" 
                                        Style="{StaticResource ModernButtonStyle}"
                                        PreviewMouseLeftButtonDown="Button_MouseLeftButtonDown" 
                                        PreviewMouseLeftButtonUp="Button_MouseLeftButtonUp"></Button>
                                <Button Focusable="False" Tag="up" Content="上" Grid.Row="0" Margin="2" Padding="0" 
                                        VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Column="1" 
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        PreviewMouseLeftButtonDown="Button_MouseLeftButtonDown" 
                                        PreviewMouseLeftButtonUp="Button_MouseLeftButtonUp"></Button>
                                <Button Focusable="False" Tag="down" Content="下" Grid.Row="2" Margin="2" Padding="0" 
                                        VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Column="1" 
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        PreviewMouseLeftButtonDown="Button_MouseLeftButtonDown" 
                                        PreviewMouseLeftButtonUp="Button_MouseLeftButtonUp"></Button>
                                <Button Focusable="False" Tag="left" Content="左" Grid.Row="1" Margin="2" Padding="0" 
                                        VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Column="0" 
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        PreviewMouseLeftButtonDown="Button_MouseLeftButtonDown" 
                                        PreviewMouseLeftButtonUp="Button_MouseLeftButtonUp"></Button>
                                <Button Focusable="False" Tag="right" Content="右" Grid.Row="1" Margin="2" Padding="0" 
                                        VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Column="2" 
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        PreviewMouseLeftButtonDown="Button_MouseLeftButtonDown" 
                                        PreviewMouseLeftButtonUp="Button_MouseLeftButtonUp"></Button>

                            </Grid>

                            <Button Focusable="False" Tag="1" Content="1" Grid.Row="4" Grid.Column="0" 
                                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Padding="0" 
                                    Margin="4,3" Style="{StaticResource SecondaryButtonStyle}"
                                    PreviewMouseLeftButtonDown="Button_MouseLeftButtonDown" 
                                    PreviewMouseLeftButtonUp="Button_MouseLeftButtonUp"></Button>
                            <Button Focusable="False" Tag="2" Content="2" Grid.Row="4" Grid.Column="1" 
                                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Padding="0" 
                                    Margin="4,3" Style="{StaticResource SecondaryButtonStyle}"
                                    PreviewMouseLeftButtonDown="Button_MouseLeftButtonDown" 
                                    PreviewMouseLeftButtonUp="Button_MouseLeftButtonUp"></Button>
                            <Button Focusable="False" Tag="3" Content="3" Grid.Row="4" Grid.Column="2" 
                                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Padding="0" 
                                    Margin="4,3" Style="{StaticResource SecondaryButtonStyle}"
                                    PreviewMouseLeftButtonDown="Button_MouseLeftButtonDown" 
                                    PreviewMouseLeftButtonUp="Button_MouseLeftButtonUp"></Button>
                            <Button Focusable="False" Tag="4" Content="4" Grid.Row="5" Grid.Column="0" 
                                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Padding="0" 
                                    Margin="4,3" Style="{StaticResource SecondaryButtonStyle}"
                                    PreviewMouseLeftButtonDown="Button_MouseLeftButtonDown" 
                                    PreviewMouseLeftButtonUp="Button_MouseLeftButtonUp"></Button>
                            <Button Focusable="False" Tag="5" Content="5" Grid.Row="5" Grid.Column="1" 
                                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Padding="0" 
                                    Margin="4,3" Style="{StaticResource SecondaryButtonStyle}"
                                    PreviewMouseLeftButtonDown="Button_MouseLeftButtonDown" 
                                    PreviewMouseLeftButtonUp="Button_MouseLeftButtonUp"></Button>
                            <Button Focusable="False" Tag="6" Content="6" Grid.Row="5" Grid.Column="2" 
                                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Padding="0" 
                                    Margin="4,3" Style="{StaticResource SecondaryButtonStyle}"
                                    PreviewMouseLeftButtonDown="Button_MouseLeftButtonDown" 
                                    PreviewMouseLeftButtonUp="Button_MouseLeftButtonUp"></Button>
                            <Button Focusable="False" Tag="7" Content="7" Grid.Row="6" Grid.Column="0" 
                                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Padding="0" 
                                    Margin="4,3" Style="{StaticResource SecondaryButtonStyle}"
                                    PreviewMouseLeftButtonDown="Button_MouseLeftButtonDown" 
                                    PreviewMouseLeftButtonUp="Button_MouseLeftButtonUp"></Button>
                            <Button Focusable="False" Tag="8" Content="8" Grid.Row="6" Grid.Column="1" 
                                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Padding="0" 
                                    Margin="4,3" Style="{StaticResource SecondaryButtonStyle}"
                                    PreviewMouseLeftButtonDown="Button_MouseLeftButtonDown" 
                                    PreviewMouseLeftButtonUp="Button_MouseLeftButtonUp"></Button>
                            <Button Focusable="False" Tag="9" Content="9" Grid.Row="6" Grid.Column="2" 
                                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Padding="0" 
                                    Margin="4,3" Style="{StaticResource SecondaryButtonStyle}"
                                    PreviewMouseLeftButtonDown="Button_MouseLeftButtonDown" 
                                    PreviewMouseLeftButtonUp="Button_MouseLeftButtonUp"></Button>
                            <Button Focusable="False" Tag="*" Content="*" Grid.Row="7" Grid.Column="0" 
                                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Padding="0" 
                                    Margin="4,3" Style="{StaticResource SecondaryButtonStyle}"
                                    PreviewMouseLeftButtonDown="Button_MouseLeftButtonDown" 
                                    PreviewMouseLeftButtonUp="Button_MouseLeftButtonUp"></Button>
                            <Button Focusable="False" Tag="0" Content="0" Grid.Row="7" Grid.Column="1" 
                                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Padding="0" 
                                    Margin="4,3" Style="{StaticResource SecondaryButtonStyle}"
                                    PreviewMouseLeftButtonDown="Button_MouseLeftButtonDown" 
                                    PreviewMouseLeftButtonUp="Button_MouseLeftButtonUp"></Button>
                            <Button Focusable="False" Tag="#" Content="#" Grid.Row="7" Grid.Column="2" 
                                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Padding="0" 
                                    Margin="4,3" Style="{StaticResource SecondaryButtonStyle}"
                                    PreviewMouseLeftButtonDown="Button_MouseLeftButtonDown" 
                                    PreviewMouseLeftButtonUp="Button_MouseLeftButtonUp"></Button>


                        </Grid>
                    </StackPanel>
                    <!-- 右侧：设备信息卡片 -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}" 
                            VerticalAlignment="Center" HorizontalAlignment="Center" 
                            MaxWidth="500" Margin="20,0">
                        <StackPanel>
                            <!-- 设备名称 -->
                            <Button Name="txt_Model" Click="txt_Model_Click" Focusable="False" 
                                    ToolTip="点击切换设备" Padding="0" Margin="0,0,0,25" 
                                    HorizontalAlignment="Left" Background="Transparent" 
                                    BorderThickness="0" Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate>
                                        <TextBlock Text="{Binding Content,RelativeSource={RelativeSource Mode=TemplatedParent}}" 
                                                   FontSize="32" FontWeight="Bold" 
                                                   Foreground="#018beb" VerticalAlignment="Center"/>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <!-- 设备信息列表 -->
                            <StackPanel>
                                <TextBlock HorizontalAlignment="Left" Name="txt_cpu" 
                                           Margin="0,8,0,8" FontSize="14" Foreground="#666666"/>
                                <TextBlock HorizontalAlignment="Left" Name="txt_cpuabi" 
                                           Margin="0,8,0,8" FontSize="14" Foreground="#666666"/>
                                <TextBlock HorizontalAlignment="Left" Name="txt_uptime" 
                                           Margin="0,8,0,8" FontSize="14" Foreground="#666666"/>
                                <TextBlock HorizontalAlignment="Left" Name="txt_baseos" 
                                           Margin="0,8,0,8" FontSize="14" Foreground="#666666"/>
                                <TextBlock HorizontalAlignment="Left" Name="txt_serial" 
                                           Margin="0,8,0,8" FontSize="14" Foreground="#666666"/>
                                <TextBlock HorizontalAlignment="Left" Name="txt_kenral" 
                                           Margin="0,8,0,8" FontSize="14" Foreground="#666666"/>
                            </StackPanel>

                            <!-- 内存信息 -->
                            <Border Background="#F0F8FF" CornerRadius="6" Padding="12" Margin="0,20,0,0">
                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" 
                                           Name="txt_memory" FontSize="14" Foreground="#333333" 
                                           FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>

            </hc:TabItem>
            <hc:TabItem>
                <hc:TabItem.Header>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Path Stretch="Fill" Width="20" Height="20" Fill="#018beb">
                            <Path.Data>
                                <GeometryGroup>
                                    <Geometry>
                                        M912 208H427.872l-50.368-94.176A63.936 63.936 0 0 0 321.056 80H112c-35.296 0-64 28.704-64 64v736c0 35.296 28.704 64 64 64h800c35.296 0 64-28.704 64-64v-608c0-35.296-28.704-64-64-64z m-800-64h209.056l68.448 128H912v97.984c-0.416 0-0.8-0.128-1.216-0.128H113.248c-0.416 0-0.8 0.128-1.248 0.128V144z m0 736v-96l1.248-350.144 798.752 1.216V784h0.064v96H112z
                                    </Geometry>
                                </GeometryGroup>
                            </Path.Data>
                        </Path>
                        <TextBlock Margin="10 0 0 0" Text="文件管理" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                    </StackPanel>
                </hc:TabItem.Header>

                <Grid Background="#F5F5F5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Border Style="{StaticResource CardStyle}" Margin="15,15,10,15" 
                            VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
