<Window  xmlns:hc="https://handyorg.github.io/handycontrol" x:Class="Nine_colored_deer_Sharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nine_colored_deer_Sharp" xmlns:converterHelper="clr-namespace:Nine_colored_deer_Sharp.Converts"
         mc:Ignorable="d"
         FontSize="14"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
         ResizeMode="CanResize"
         AllowsTransparency="True" 
        Title="Nine-colored-deer-Sharp" Height="750" Width="1100"
        Background="#F5F5F5">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CaptionHeight="0" ResizeBorderThickness="0"/>
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <converterHelper:MulitImageCacheConverter x:Key="gMulitImageCacheConverter">
        </converterHelper:MulitImageCacheConverter>
        
        <!-- 现代化按钮样式 -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#018beb"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#40000000" Direction="270" ShadowDepth="2" BlurRadius="4" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0178d4"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0160b0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 次要按钮样式 -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D0D0D0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- 卡片样式 -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#20000000" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="65px"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <!-- 现代化标题栏 -->
        <Border MouseLeftButtonDown="SimplePanel_MouseDown">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#018beb" Offset="0"/>
                    <GradientStop Color="#0178d4" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Color="#40000000" Direction="270" ShadowDepth="2" BlurRadius="4" Opacity="0.2"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="25,0,0,0">
                    <TextBlock Text="📱" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="KaiOS手机助手" FontSize="20" Name="txt_title" 
                               VerticalAlignment="Center" Foreground="White" FontWeight="SemiBold"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,15,0">
                    <Button Background="Transparent" Name="btn_getupdate" Click="btn_getupdate_Click" 
                            BorderThickness="0" VerticalAlignment="Center" Foreground="White" 
                            Margin="0,0,15,0" FontSize="14" Padding="10,5" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="Transparent" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#20FFFFFF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        检查更新
                    </Button>

                    <!-- 窗口控制按钮 -->
                    <Button Width="40" Height="40" Name="btn_min" Click="btn_min_Click" Margin="0,0,5,0" 
                            Background="Transparent" BorderThickness="0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="Transparent" CornerRadius="4" Width="40" Height="40" Name="minBorder">
                                    <Path Width="16" Height="2" Fill="White" Stretch="Fill" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <Path.Data>
                                            <PathGeometry Figures="M0,0 L16,0"/>
                                        </Path.Data>
                                    </Path>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#30FFFFFF" TargetName="minBorder"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Width="40" Height="40" Name="btn_max" Click="btn_max_Click" Margin="0,0,5,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="Transparent" CornerRadius="4" Width="40" Height="40">
                                    <Path Width="14" Height="14" Stroke="White" StrokeThickness="2" Fill="Transparent" Stretch="Fill" 
                                          VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <Path.Data>
                                            <RectangleGeometry Rect="1,1,12,12"/>
                                        </Path.Data>
                                    </Path>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#30FFFFFF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <Button Width="40" Height="40" Name="btn_close" Click="btn_close_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="Transparent" CornerRadius="4" Width="40" Height="40" Name="border">
                                    <Path Width="16" Height="16" Stroke="White" StrokeThickness="2" Fill="Transparent" Stretch="Fill" 
                                          VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <Path.Data>
                                            <GeometryGroup>
                                                <LineGeometry StartPoint="2,2" EndPoint="14,14"/>
                                                <LineGeometry StartPoint="14,2" EndPoint="2,14"/>
                                            </GeometryGroup>
                                        </Path.Data>
                                    </Path>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E81123" TargetName="border"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>


